    "# Verificar qu√© herramientas est√°n disponibles en el sistema\n",
    "import subprocess\n",
    "import shutil\n",
    "\n",
    "def verificar_herramientas():\n",
    "    \"\"\"\n",
    "    Verifica qu√© herramientas de entornos virtuales est√°n disponibles.\n",
    "    \"\"\"\n",
    "    herramientas = {\n",
    "        'python': 'Python interpreter',\n",
    "        'pip': 'Package installer for Python', \n",
    "        'conda': 'Anaconda/Miniconda package manager',\n",
    "        'poetry': 'Modern dependency management',\n",
    "        'pipenv': 'Python packaging tool'\n",
    "    }\n",
    "    \n",
    "    print(\"üîç Verificando herramientas disponibles:\\n\")\n",
    "    \n",
    "    disponibles = []\n",
    "    no_disponibles = []\n",
    "    \n",
    "    for herramienta, descripcion in herramientas.items():\n",
    "        if shutil.which(herramienta):\n",
    "            try:\n",
    "                result = subprocess.run([herramienta, '--version'], \n",
    "                                      capture_output=True, text=True, timeout=5)\n",
    "                \n",
    "                if result.returncode == 0:\n",
    "                    version = result.stdout.strip() or result.stderr.strip()\n",
    "                    print(f\"‚úÖ {herramienta:<10} - {descripcion}\")\n",
    "                    print(f\"   Versi√≥n: {version.split()[0] if version else 'Desconocida'}\")\n",
    "                    disponibles.append(herramienta)\n",
    "                else:\n",
    "                    print(f\"‚ö†Ô∏è  {herramienta:<10} - Instalado pero con problemas\")\n",
    "                    no_disponibles.append(herramienta)\n",
    "            except Exception:\n",
    "                print(f\"‚ö†Ô∏è  {herramienta:<10} - Error al verificar\")\n",
    "                no_disponibles.append(herramienta)\n",
    "        else:\n",
    "            print(f\"‚ùå {herramienta:<10} - No disponible\")\n",
    "            no_disponibles.append(herramienta)\n",
    "        print()\n",
    "    \n",
    "    print(f\"üìä Resumen: {len(disponibles)} disponibles, {len(no_disponibles)} no disponibles\")\n",
    "    return disponibles, no_disponibles\n",
    "\n",
    "disponibles, no_disponibles = verificar_herramientas()"
   ]
