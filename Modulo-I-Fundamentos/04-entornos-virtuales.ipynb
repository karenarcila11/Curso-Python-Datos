    "# Verificar el entorno actual de Python\n",
    "import sys\n",
    "import os\n",
    "import pkg_resources\n",
    "\n",
    "def verificar_entorno_actual():\n",
    "    \"\"\"Muestra informaci√≥n del entorno Python actual\"\"\"\n",
    "    \n",
    "    print(\"üêç Informaci√≥n del entorno Python actual:\")\n",
    "    print(f\"  Versi√≥n de Python: {sys.version.split()[0]}\")\n",
    "    print(f\"  Ejecutable: {sys.executable}\")\n",
    "    print(f\"  Directorio actual: {os.getcwd()}\")\n",
    "    \n",
    "    # Verificar si estamos en un entorno virtual\n",
    "    in_venv = hasattr(sys, 'real_prefix') or (hasattr(sys, 'base_prefix') and sys.base_prefix != sys.prefix)\n",
    "    print(f\"  ¬øEn entorno virtual?: {'S√≠' if in_venv else 'No'}\")\n",
    "    \n",
    "    if in_venv:\n",
    "        print(f\"  Prefijo del entorno: {sys.prefix}\")\n",
    "        print(f\"  Prefijo base: {getattr(sys, 'base_prefix', 'No disponible')}\")\n",
    "    \n",
    "    # Contar paquetes instalados\n",
    "    installed_packages = list(pkg_resources.working_set)\n",
    "    print(f\"  Total de paquetes instalados: {len(installed_packages)}\")\n",
    "    \n",
    "    return {\n",
    "        \"in_venv\": in_venv,\n",
    "        \"python_version\": sys.version.split()[0],\n",
    "        \"packages_count\": len(installed_packages)\n",
    "    }\n",
    "\n",
    "info_entorno = verificar_entorno_actual()"
   ]
