    "        },\n",
    "        \"Analisis_Laboratorio\": {\n",
    "            \"pandas\": \"2.1.0\",  # ‚ö†Ô∏è Conflicto!\n",
    "            \"numpy\": \"1.24.0\",   # ‚ö†Ô∏è Conflicto!\n",
    "            \"scikit-learn\": \"1.3.0\",\n",
    "            \"matplotlib\": \"3.7.0\"\n",
    "        },\n",
    "        \"Reportes_Epidemiologicos\": {\n",
    "            \"pandas\": \"1.5.3\",  # ‚ö†Ô∏è Otro conflicto!\n",
    "            \"plotly\": \"5.15.0\",\n",
    "            \"dash\": \"2.10.0\",\n",
    "            \"openpyxl\": \"3.1.0\"\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    print(\"üè• Proyectos del hospital con sus dependencias:\\n\")\n",
    "    \n",
    "    all_packages = {}\n",
    "    conflicts = {}\n",
    "    \n",
    "    for proyecto, dependencias in proyectos.items():\n",
