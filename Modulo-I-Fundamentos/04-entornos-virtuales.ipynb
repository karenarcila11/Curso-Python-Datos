    "# Ejemplo: Verificar el entorno actual de Python\n",
    "import sys\n",
    "import os\n",
    "\n",
    "print(\"Información del entorno Python actual:\")\n",
    "print(f\"Versión de Python: {sys.version}\")\n",
    "print(f\"Ejecutable: {sys.executable}\")\n",
    "print(f\"Directorio actual: {os.getcwd()}\")\n",
    "\n",
    "# Verificar si estamos en un entorno virtual\n",
    "in_venv = hasattr(sys, 'real_prefix') or (hasattr(sys, 'base_prefix') and sys.base_prefix != sys.prefix)\n",
    "print(f\"¿En entorno virtual?: {'Sí' if in_venv else 'No'}\")\n",
    "\n",
    "if in_venv:\n",
    "    print(f\"Prefijo del entorno: {sys.prefix}\")\n",
    "    print(f\"Prefijo base: {getattr(sys, 'base_prefix', 'No disponible')}\")"
